{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/content", "dest": "/server.js" },
    { "src": "/admin", "dest": "/admin.html" },
    { "src": "/login", "dest": "/login.html" },
    { "src": "/", "dest": "/index.html" }
  ]
}
